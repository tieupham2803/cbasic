#include<stdio.h>
#define max 30
#define MAX 100
typedef struct address {char name[max]; int phone /*telephone number*/; char email[max] /*e-mail address*/;} address;
void main()
{
  address add[MAX]; int i,n;
  do {printf("Nhap so nguoi trong danh ba can nhap: "); scanf("%d",&n);} while(n<=0||n>=101);
  printf("Nhap thong tin tung nguoi:\n");
  for(i=0;i<=n-1;i++)
  {
    printf("Nguoi thu %d",i+1);
    printf("  Ten: "); gets(add.name);
    printf("  So dien thoai: "); scanf("%d",&add.phone);
    printf("  Dia chi mail: "); gets(add.email);
  }
}
